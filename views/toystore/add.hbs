<form action="/toystore/add" method="post" class="container col-md-8 card bg-warning mt-3">
   <h1 class="text-danger text-uppercase text-center mt-3">Add new product</h1>
   <div class="form-group mt-3">
      <label for="name" class="text-primary">Name</label>
      <input class="form-control" type="text" name="name" required minlength="3" maxlength="30">
   </div>
   <div class="form-group mt-3">
      <label for="category" class="text-primary">Category</label>
      <input class="form-control" type="text" name="category" required minlength="3" maxlength="30">
   </div>
   <div class="form-group mt-3">
      <label for="origin" class="text-primary">Origin</label>
      <input class="form-control" type="text" name="origin" required minlength="3" maxlength="30">
   </div>
   <div class="form-group mt-3">
      <label for="image" class="text-primary">Image</label>
      <input class="form-control" type="url" name="image" required>
   </div>
   <div class="form-group mt-3">
      <label for="price" class="text-primary">Price</label>
      <input class="form-control" type="text" name="price" required minlength="3" maxlength="30">
   </div>
   <div class="form-group s-3">
      <label for="description" class="text-primary">Description</label>
      <input class="form-control" type="text" name="description" unrequired minlength="3" maxlength="30">
   </div>
   <div class="form-group mt-3 mb-3 text-center">
      <input class="btn btn-primary" type="submit" value="Add">
      <input class="btn btn-success" type="reset" value="Clear">
   </div>
</form>